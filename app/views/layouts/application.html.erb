<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag "main",:media => "screen" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.3/jquery.min.js","application.js","jquery-rails.js",:cache => "jquery" %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="wrap">
		<%= render 'layouts/header' %>
		
		<%= render 'layouts/search' %>
		
		<section id="global-content">
			<%= yield %>
		</section>	
		
		<%= render 'layouts/footer' %>
	</div>
	
	<%= debug(params) if Rails.env.development? %>
</body>
</html>
