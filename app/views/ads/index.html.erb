<h1>My current ads</h1>

<%= render "admin_menu" %>

<%= render "shared/flash", :flash => flash %>

<% if @ads.any? %>
	<table id="user-ads-list" class="admin-tab">
		<tr>
			<th>Preview</th>
			<th>title</th>
			<th colspan = "2">Actions</th>
		</tr>
		
		<% @ads.each do |ad| %>
			<%= render "admin_ads", :ad => ad %> 
		<% end %>
		
	</table>
	<% else %>
	<p>You don't have any ads for the moment. <%= link_to "Add one", new_ad_path %> !</p>	
<% end %>
