<article>
	<header>
		<h1><%= ad.title %></h1>
	</header>
	<%= image_tag(ad.photo.url :thumb) %>
	<section class="content">
		<%= sanitize(truncate(ad.description, :length => 30)) %>
		<strong><%= format_price(ad.price) %></strong>
		<%= link_to("See details", ad_path(ad)) %>
	</section>
</article>
